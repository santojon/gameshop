<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.santojon.shop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.santojon.shop.ui.main.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.FullScreen">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.santojon.shop.ui.main.activity.LoginActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.santojon.shop.ui.main.activity.RegisterActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.santojon.shop.ui.main.activity.MainActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.santojon.shop.ui.main.activity.DetailsActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.santojon.shop.ui.main.activity.OrdersActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.santojon.shop.ui.main.activity.CartActivity"
            android:screenOrientation="portrait"></activity>
    </application>
</manifest>
